<div id="auth-form" class="container">
    <div class="row align-items-center justify-content-center signup-form-container">
        <div class="col-sm-8 signup-form">
            <h1>Reset Password</h1>
            <p class="sub signup-sub">Enter a new 8 character password to replace the old one.</p>
            
            {{#each errors}}
                <div role="alert" class="alert alert-danger text-center">
                    {{msg}}
                </div>
            {{/each}}

            <div class="signup-box">
                <form method="POST" action="/auth/reset/{{ token }}">
                    <div class="form-group">
                        <label for="password">New Password</label>
                        <input type="password" name="password" id="password" placeholder="New password" class="form-control" v-validate="'required|min:4|max:100'" data-vv-delay="350" autofocus>
                        <p class="small text-danger" v-cloak>\{{ errors.first('password') }}</p>
                    </div>
                    <div class="form-group">
                        <label for="passwordConfirmation">Confirm Password</label>
                        <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirm password" class="form-control" v-validate="'required|confirmed:password|min:4|max:100'" data-vv-delay="350" data-vv-as="password">
                        <p class="small text-danger" v-cloak>\{{ errors.first('passwordConfirmation') }}</p>
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-submit">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="./js/auth.bundle.js"></script>