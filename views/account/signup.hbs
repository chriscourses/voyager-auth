<div id="auth-form" class="container">
    {{#if error}}
        <div role="alert" class="alert alert-danger text-center">
            {{error.[0]}}
        </div>
    {{/if}}

    <div class="errors">
        {{#each errors}}
            <ul>
                <li>{{msg}}</li>
            </ul>
        {{/each}}
    </div>
    <div class="row align-items-center justify-content-center signup-form-container">
        <div class="col-sm-8 signup-form">
            <h1>Sign Up</h1>
            <p class="sub signup-sub">Gain personalized access to a 100% free professional web development education. </p> 
     
            <div class="signup-box">
                <form action="/auth/signup" method="POST" @submit.prevent="validateBeforeSubmit" ref="form">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="username" name="username" id="username" placeholder="Username" class="form-control" v-validate="'required|min:4|max:20'" data-vv-delay="350" autofocus>
                        <p v-show="errors.has('username')" class="small text-danger" v-cloak>\{{ errors.first('username') }}</p>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="Email" class="form-control"v-validate="'required|email'" data-vv-delay="350">
                        <p v-show="errors.has('email')" class="small text-danger" v-cloak>\{{ errors.first('email') }}</p>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" placeholder="Password" class="form-control" v-validate="'required|min:4|max:100'" data-vv-delay="350">
                        <p class="small text-danger" v-cloak>\{{ errors.first('password') }}</p>
                    </div>
                    <div class="form-group">
                        <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirm Password" class="form-control" v-validate="'required|confirmed:password|min:4|max:100'" data-vv-delay="350" data-vv-as="password">
                        <p class="small text-danger" v-cloak>\{{ errors.first('passwordConfirmation') }}</p>
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-submit">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="js/auth.bundle.js"></script>
